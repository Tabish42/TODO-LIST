
<%-include("header")-%>
<body>
    <div class="box" id="heading">
        <h1>It's a <%=listTitle %></h1>
    </div>

    <div class="box">
        <ul>
            <%for(let i=0; i<newListItems.length;i++){ %>
                <div class="item">
            <div class="item">
                <input type="checkbox" id="item<%=i%>" name="button">
                <p><%= newListItems[i] %></p>
            </div>
        </div>
            <% } %>
        </ul>
    

    <form class="item" method="post" action="/">
        <input type="text" id="newItem" name="newItem" placeholder="New Note" autocomplete="off">
        <button type="submit" name="list" value = "<%= listTitle %>">+</button>
    </form>
</div>


    <%-include("footer")-%>
</body>

</html>
